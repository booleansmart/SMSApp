<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="Add Key"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <EditText
        android:id="@+id/phone_num"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="108dp"
        android:ems="10"
        android:hint="Enter Phone Number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/initPassPu"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/phone_num"
        android:layout_marginTop="172dp"
        android:ems="10"
        android:hint="Enter Xkey (12 characters)"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/set_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="107dp"
        android:onClick="createKey"
        android:text="Set Key" />

    <EditText
        android:id="@+id/initPassPr"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/phone_num"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Enter Ykey (12 characters)"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/getRandomKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/phone_num"
        android:layout_marginBottom="172dp"
        android:onClick="randomKey"
        android:text="Get Random Key" />

    <Button
        android:id="@+id/but123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/getRandomKey"
        android:layout_marginEnd="26dp"
        android:onClick="sendCode"
        android:text="Sent code" />
</RelativeLayout>